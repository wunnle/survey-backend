{
  "name": "survey-api",
  "version": 2,
  "builds": [
    {
        "src": "/api/**/*.js",
        "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/rate",
      "dest": "/api/rate",
      "methods": ["POST"]
    },
    {
      "src": "/results",
      "dest": "/api/results",
      "methods": ["GET"]
    }
  ],
  "env": {
    "SURVEY_DB_URI": "@survey-db-uri"
  }
}